@using System.Collections.Generic
@using System.Linq
@using WaFFLs.Generation.Models
@inherits RazorEngine.Templating.TemplateBase<List<TeamInfo>>

<html>
<head>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background: #f8f9fa;
        }

        table {
            margin: 2em auto;
            border-collapse: collapse;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        th, td {
            padding: 0.75em 1.5em;
            text-align: center;
            border-bottom: 1px solid #e0e0e0;
        }

        th {
            background: #f1f3f4;
        }

            /* Left align Team (first column) and Championships (fifth column) */
            th:first-child,
            td:first-child,
            th:nth-child(5),
            td:nth-child(5) {
                text-align: left;
            }

        a {
            color: #0074d9;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        small {
            color: #888;
        }
    </style>
</head>
<body>
    <table width="90%">
        <tbody>
            <tr>
                <th>Team</th>
                <th>Years</th>
                <th>Record</th>
                <th>Playoff</th>
                <th>Championships</th>
            </tr>
            @foreach (var x in Model.OrderByDescending(x => x.SeasonRecord.Wins).ThenByDescending(x => x.LastSeason))
            {
                <tr>
                    <td><a href="@x.Filename">@x.Name</a></td>
                    <td>
                        @if (x.FirstSeason == x.LastSeason)
                        {
                            <text>@x.FirstSeason</text>
                        }
                        else
                        {
                            <text>@x.FirstSeason-@x.LastSeason</text>
                        }
                    </td>
                    <td>@x.SeasonRecord.Wins-@x.SeasonRecord.Losses</td>
                    <td>@x.PlayoffRecord.Wins-@x.PlayoffRecord.Losses</td>
                    <td><small>@string.Join(",", x.ChampionshipYears)</small></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>