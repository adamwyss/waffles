@using System.Collections.Generic
@using WaFFLs.Generation
@inherits RazorEngine.Templating.TemplateBase<List<System.Type>>

<html>
<head>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background: #f8f9fa;
        }

        .main-container {
            width: 60%;
            background: #fff;
            margin: 2em auto;
            padding: 2em;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        h1 {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 1em;
            text-align: center;
        }

        .nav-links {
            margin-bottom: 2em;
            text-align: center;
        }

            .nav-links a {
                margin: 0 1em;
                color: #0074d9;
                text-decoration: none;
                font-weight: bold;
            }

                .nav-links a:hover {
                    text-decoration: underline;
                }

        .records-section {
            margin-top: 2em;
        }

        .records-title {
            font-weight: bold;
            font-size: 1.6em;
            margin-bottom: 0.75em;
            text-align: center;
            letter-spacing: 1px;
            color: #000;
            text-shadow: 0 2px 8px rgba(0,0,0,0.08);
            border-bottom: 2px solid #e0e0e0;
            padding-bottom: 0.3em;
        }

        .records-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75em;
            justify-content: center;
            margin-bottom: 1.5em;
        }

        .record-btn {
            display: inline-block;
            background: #f1f3f4;
            color: #0074d9;
            border: none;
            border-radius: 6px;
            padding: 0.75em 1.5em;
            font-size: 1em;
            font-weight: 500;
            text-align: center;
            text-decoration: none;
            box-shadow: 0 1px 4px rgba(0,0,0,0.03);
            transition: background 0.2s, color 0.2s;
            cursor: pointer;
        }

            .record-btn:hover {
                background: #0074d9;
                color: #fff;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="main-container">
        <h1>WaFFL Record Book</h1>

        <div class="nav-links">
            <a href="teams.html">All Teams</a>
            <a href="owners.html">All Owners</a>
        </div>

        <div class="records-section">
            <div class="records-title">Records</div>
            <div class="records-buttons">
                @foreach (var t in Model)
                {
                    <a class="record-btn" href="@string.Format("{0}.html", t.Name)">@TitleAttribute.GetTitleText(t)</a>
                }
            </div>
        </div>
    </div>
</body>
</html>