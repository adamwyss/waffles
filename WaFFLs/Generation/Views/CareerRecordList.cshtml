@using System.Collections.Generic
@using WaFFLs.Generation
@using WaFFLs.Generation.Models
@inherits RazorEngine.Templating.TemplateBase<List<CareerRecord>>

<html>
<head></head>
<body>

<h2>@ViewBag.Title</h2>
<i>@ViewBag.Summary</i>

<ol>
    @foreach (var x in Model)
    {
        <li>
            @x.Value.WithCommas()
            @x.Team.GetDisplayName()
            @if (!string.IsNullOrWhiteSpace(x.Notes))
            {
                <text><small>(<em>@x.Notes</em>)</small></text>
            }
        </li>
    }
</ol>

</body>
</html>